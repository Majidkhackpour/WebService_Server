@model Persistence.Entities.Product

<div class="card card-body text-left">
    <h2>جزئیات اطلاعات کالا</h2>
    <h2>" @Model.Name "</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            کد کالا : @Html.DisplayFor(model => model.Code)
        </dt>
        <dt>
            نام کالا :  @Html.DisplayFor(model => model.Name)
        </dt>

        <dt>
            واحد :  @Html.DisplayFor(model => model.Unit)
        </dt>

        <dt>
            قیمت : @Model.Price.ToString("N0")
        </dt>

        <dt>
            هزینه پشتیبانی : @Model.BckUpPrice.ToString("N0")
        </dt>

    </dl>
</div>
<hr />
<div>
    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">بستن</button>
</div>