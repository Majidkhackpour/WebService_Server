@model Persistence.Entities.Customers
@using Services
@{
    ViewBag.Title = "Delete";
}

<h2>حذف</h2>

<h3>آیا از حذف "@Model.Name" اطمینان دارید؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            تاریخ ثبت
        </dt>

        <dd>
            @Calendar.MiladiToShamsi(Model.Modified)
            @*@Html.DisplayFor(model => model.Modified)*@
        </dd>

        <dt>
            وضعیت
        </dt>

        <dd>
            @if (Model.Status)
            {
                <span class="badge badge-success">فعال</span>
            }
            else
            {
                <span class="badge badge-danger">حذف شده</span>
            }
        </dd>


        <dt>
            تاریخ انقضا
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpireDateSh)
        </dd>


        <dt>
            وضعیت مسدودی
        </dt>

        <dd>
            @if (!Model.isBlock)
            {
                <span class="badge badge-success">آزاد</span>
            }
            else
            {
                <span class="badge badge-danger">مسدود</span>
            }
        </dd>

        <dt>
            وضعیت وب سرویس
        </dt>

        <dd>
            @if (!Model.isWebServiceBlock)
            {
                <span class="badge badge-success">آزاد</span>
            }
            else
            {
                <span class="badge badge-danger">مسدود</span>
            }
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            <button type="button" class="btn btn-outline-info" data-dismiss="modal" aria-label="بستن">
                انصراف
            </button>
        </div>
    }
</div>
